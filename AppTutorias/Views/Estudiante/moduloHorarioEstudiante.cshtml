
@model List<AppTutorias.Models.Estudiante.horarioClaseEstudiante>
<style>

	.cHorario {
		width: 100%;
		overflow-x: scroll;
	}

	.table-horario {
		border-collapse: collapse;
		font-size: 12px;
		width: 700px;
	}

		.table-horario thead tr {
			background: #57090C;
			color: #fff;
		}

		.table-horario th,
		td {
			padding: 5px;
			width: 90px;
			border: 1px solid rgb(200, 200, 200);
			text-align: center;
		}

		.table-horario td:first-child {
			background: rgb(41, 41, 41);
			color: #fff;
		}
	.container-horario {
		padding: 15px;

	}
	@@media only screen and (min-width: 769px) {
		.container-horario {
			padding: 15px;
			display: flex;
			justify-content: center;
		}

			.container-horario div {
				width: 700px;
			}
	}
</style>


<div class="container-horario">
	<div>
		<br />

		<h4>Horario de Clases</h4>
		<p>Conoce las materias y horas de clases, no te descuides de tu horario. </p><br />

		<div class="cHorario">

			<table class="table-horario">
				<thead>
					<tr>

						<th>Hora</th>
						<th>Lunes</th>
						<th>Martes</th>
						<th>Miercoles</th>
						<th>Jueves</th>
						<th>Viernes</th>
						<th>Sabado</th>
					</tr>
				</thead>
				<tbody id="tableHorario"></tbody>
			</table>
		</div>
	</div>
</div>

<script>

	$('#tableHorario').empty();

	var d = "";
	var horarios = ['07:00 - 08:00', '08:05 - 09:05', '09:10 - 10:10', '10:15 - 11:15', '11:20 - 12:20', '12:25 - 13:25',
		'ALMUERZO', '13:30 - 14:30', '14:35 - 15:35', '15:40 - 16:40', '16:45 - 17:45', '17:50 - 18:50', '18:50 - 19:50', '19:50 - 20:50', '20:50 - 21:50'];
	for (var i = 0; i < 15; i++) {

		d += '<tr><td>' + horarios[i] + '</td><td></td><td></td><td></td><td></td><td></td><td></td></tr>';

	}

	$('#tableHorario').append(d);

	$('tr:eq(7)').css('background', '#cdcdcd');

</script>


@foreach (var horarios in Model)
{

	<script>
	var numeroSeparado;
	var numero = "@horarios.CodigoModulo".split('');
		numeroSeparado = numero[1] + numero[2];
		var modulo = parseInt(numeroSeparado);

		
							if('@horarios.Dia' === "Lunes" ){

								$('tr:eq(' + modulo + ') td:eq(' +1+ ')').text('@horarios.CodigoMateria-@horarios.Paralelo/@horarios.Aula');
							}
							if ('@horarios.Dia' === "Martes" ){

								$('tr:eq(' + modulo + ') td:eq('+2+')').text('@horarios.CodigoMateria-@horarios.Paralelo/@horarios.Aula');
						}
							if ('@horarios.Dia' === "Miercoles" ){

								$('tr:eq(' + modulo + ') td:eq('+3+')').text('@horarios.CodigoMateria-@horarios.Paralelo/@horarios.Aula');
						}
							if ('@horarios.Dia' === "Jueves" ){

								$('tr:eq(' + modulo + ') td:eq('+4+')').text('@horarios.CodigoMateria-@horarios.Paralelo/@horarios.Aula');
						}
							if ('@horarios.Dia' === "Viernes" ){

								$('tr:eq(' + modulo + ') td:eq(' + 5 + ')').text('@horarios.CodigoMateria-@horarios.Paralelo/@horarios.Aula');
						}
							if ('@horarios.Dia' === "Sabado" ){

								$('tr:eq(' + modulo + ') td:eq(' + 6 + ')').text('@horarios.CodigoMateria-@horarios.Paralelo/@horarios.Aula');
							}

	</script>



}